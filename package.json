{
  "name": "jest-ts-lcov-demo",
  "version": "0.0.0",
  "description": "Demo: SF in lcov report does not match source file path",
  "main": "index.js",
  "scripts": {
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nicolaisueper/jest-ts-lcov-demo.git"
  },
  "author": "Nicolai SÃ¼per",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nicolaisueper/jest-ts-lcov-demo/issues"
  },
  "homepage": "https://github.com/nicolaisueper/jest-ts-lcov-demo#readme",
  "devDependencies": {
    "@types/jest": "22.2.3",
    "jest": "22.4.4",
    "ts-jest": "22.4.6",
    "typescript": "2.8.3"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ],
    "coverageReporters": [
      "lcov",
      "text",
      "text-summary"
    ],
    "testMatch": [
      "**/__tests__/**/*.(j|t)s?(x)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
